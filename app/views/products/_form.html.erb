<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sku %><br>
    <%= f.text_field :sku %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist %><br>
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label :format %><br>  
    <%= f.select :format, 
      [
        ['7"', '7-inch'],
        ['12"', '12-inch'],
        ['CD EP', 'CD-EP'],
        ['CD Album', 'CD-LP'],
        ['LP Album', 'LP']
      ]
    %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
